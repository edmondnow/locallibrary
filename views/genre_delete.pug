extends layout

block content
  h1 #{title}: #{genre.name}
  
  if books.length
  
    p #[strong Delete the following book books before attempting to delete this book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Books
      hr
      dl
      each book in books
        dt 
          a(href=book.url) #{book.title}
          

  else
    p Do you really want to delete this genre?
    
    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )

      button.btn.btn-primary(type='submit') delete