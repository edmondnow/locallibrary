extends layout

block content
	h1= title
	
	ul
	each author in author_list
		li 
			a(href=author.url) #{author.name} 
			if author.time_alive.date_of_death
				| (#{author.time_alive.date_of_birth} - #{author.time_alive.date_of_death})
			else if author.time_alive.date_of_birth
				| (#{author.time_alive.date_of_birth} - present)
			else 
				| (unknown)

	else
		li There are no authors.